{
    "name": "{{name}}",
    "version": "{{version}}",
    "description": "{{description}}",
    "main": "{{path}}dist/index.js",
    "module": "{{path}}dist/index.js",
    "typings": "{{path}}dist/index.d.ts",
    "scripts": {
        "start": "parcel {{path}}src/index.ts",
        "build": "parcel build {{path}}src/index.ts",
        "lint": "tslint -c tslint.json {{path}}src/*.ts",
        "test": "jest --config {{path}}jest.config.json",
        "publish": "echo 'Publishing' && exit 0",
        "test:watch": "jest --config {{path}}jest.config.json --watch",
        "test:coverage": "jest --config {{path}}jest.config.json --coverage",
        "docs": "typedoc --mode modules --exclude \"{{path}}**/*+(index|.spec|.e2e).ts\" --tsconfig {{path}}tsconfig.json --hideGenerator --readme {{path}}README.md --out {{path}}docs {{path}}src",
        "clean": "rimraf {{path}}dist && rimraf {{path}}docs && rimraf {{path}}coverage",
        "precommit": "run-s lint test build clean",
        "prepush": "run-s lint test"
    },
    "dependencies": {
        "@types/node": "10.9.2"
    },
    "devDependencies": {
        "@types/jest": "23.3.1",
        "husky": "0.14.3",
        "jest": "23.5.0",
        "npm-run-all": "4.1.3",
        "parcel": "1.9.7",
        "parcel-bundler": "^1.10.3",
        "rimraf": "2.6.2",
        "ts-jest": "23.1.4",
        "tslint": "5.11.0",
        "typedoc": "0.12.0",
        "typescript": "3.0.1"
    },
    "engines": {
        "node": ">=10.6.0"
    },
    "author": "{{author}}",
    "repository": {
        "type": "git",
        "url": "{{repository}}"
    },
    "license": "Check LICENSE file"
}
